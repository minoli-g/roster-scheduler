extends ../layout 

block content

    div(class="container-fluid py-4")
        div(class="jumbotron d-flex flex-column text-center align-items-center justify-content-center")
            p
                i(class="fas fa-arrow-left" style="color:#1E90FF")
                a(href='/home') &nbsp; Back to Dashboard
            br
            h1 Report an Issue
            em Your message will be sent to the consultant and hospital admin.
            
            if(message)
                div(class="alert alert-danger") #{message}
            br

            div(class="card rounded shadow-lg col-6")
                div(class="card-body text-center")
                        form(method="POST", action="/doctor/report")

                            div(class="form-group")
                                label(for="report" class="col-md-6 col-form-label") Message
                                input(type="text", name="report", class="form-control")
                                br

                            button(type="submit" class="btn btn-info mx-3 my-3") Send