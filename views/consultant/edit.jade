extends ../layout 

block content

    div(class="container-fluid py-4")
        div(class="jumbotron d-flex flex-column text-center align-items-center justify-content-center")

            p
                i(class="fas fa-arrow-left" style="color:#1E90FF")
                a(href='/home') &nbsp; Back to Dashboard

            h1 Ward: #{wardName}

            if(message)
                br
                div(class="alert alert-danger") #{message}
            br

            h2 Edit Ward Parameters &nbsp; 
                a(href="/consultant/ward/#{wardId}") (Cancel)
            br 

            div(class="card rounded shadow-lg col-6")
                    div(class="card-body text-center")
                        form(method="POST", action="/consultant/edit")

                            input(type="hidden", name="wardId", value=wardId)

                            div(class="form-group form-row")
                                label(for="min_docs" class="col-md-6 col-form-label") Minimum number of doctors
                                    small(class="form-text text-muted") The minimum number of doctors that should be present in the ward at any moment.
                                input(type="number", name="min_docs", value=min_docs, class="col-md-6 form-control")
                                br

                            div(class="form-group form-row")
                                label(for="morning_start" class="col-md-6 col-form-label") Morning shift start time 
                                input(type="time" name="morning_start" value=morning_start class="col-md-6 form-control")
                                br

                            div(class="form-group form-row")
                                label(for="day_start" class="col-md-6 col-form-label") Daytime shift start time 
                                input(type="time" name="day_start" value=day_start class="col-md-6 form-control")
                                br

                            div(class="form-group form-row")
                                label(for="night_start" class="col-md-6 col-form-label") Night shift start time 
                                input(type="time" name="night_start" value=night_start class="col-md-6 form-control")
                                br
        
                            button(type="submit" class="btn btn-primary") Change Parameters


    