extends layout 

block content

    div(class="container-fluid")
        div(class="jumbotron d-flex flex-column text-center align-items-center justify-content-center")
            h4(class="display-4") Log In to Roster Scheduler
            em Don't have an account yet? 
                a(href="/signup") Sign up here.
            
            if(message)
                br
                div(class="alert alert-danger") #{message}
            br

            div(class="card rounded shadow-lg")
                div(class="card-body text-center px-8")

                    form(method="POST", action="/login")
                        div(class="form-group form-row")
                            label(for="username" class="col-form-label") Username 
                            input(type="text", name="username", class="col-sm-8 form-control" required="required")
                            br

                        div(class="form-group form-row")
                            label(for="password" class="col-form-label") Password 
                            input(type="password" name="password", class="col-sm-8 form-control" required="required")
                            br

                        button(type="submit" class="btn btn-outline-dark") Go




